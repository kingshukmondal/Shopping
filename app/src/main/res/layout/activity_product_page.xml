<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    android:layout_marginTop="@dimen/_15sdp"
    tools:context=".product_page">










<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:padding="@dimen/_12sdp"
            android:layout_height="@dimen/_300sdp" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            app:dotsColor="#000000"
            app:dotsStrokeColor="#7E000000"
            app:dotsStrokeWidth="3dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            app:dotsSpacing="3dp"     />


    <TextView
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HP Pavilion"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="#4CAF50"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HP Pavilion 15-DK1056WM"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textStyle="bold"/>



   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">


    <RatingBar
        android:id="@+id/MyRating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:rating="3.5"
        android:layout_marginLeft="@dimen/_8sdp"
        android:progressTint="#FFC107"
        android:layout_marginVertical="@dimen/_2sdp"
        android:numStars="5"
        android:stepSize="0.1" />

       <TextView
           android:id="@+id/rating"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/MyRating"
           android:text="4.5"
           android:textSize="@dimen/_12sdp"
           android:textStyle="bold"
           android:textColor="#FFC107"
           android:layout_marginLeft="@dimen/_8sdp"/>

   </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/_13sdp"
            android:text="17% off"
            android:paddingHorizontal="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#2196F3"/>
        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:textSize="@dimen/_13sdp"
            android:text="8999"
            android:textColor="#86000000"/>

        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/_18sdp"
            android:text="â‚¹7,598"
            android:paddingHorizontal="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#000000"/>




    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HP Pavilion 15-DK1056WM Gaming Laptop 10th Gen Core i5, 8GB, 256GB SSD, GTX 1650 4GB, Windows 10"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="#77000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:text="Laptop"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


        </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Availiblity"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        app:cardCornerRadius="@dimen/_10sdp">


        <TextView
            android:id="@+id/avail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Available in Stock (79)"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

    </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="@dimen/_10sdp">

    <TextView
        android:id="@+id/buynow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Buy Now"
        android:textColor="@color/white"
        android:background="#FF9800"
        android:textStyle="bold"
        android:paddingVertical="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_14sdp" />
    </androidx.cardview.widget.CardView>


</FrameLayout>



